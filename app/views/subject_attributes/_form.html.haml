= simple_form_for [@policy, @subject_attribute] do |f|
  = f.association :oid, collection: Oid.all.collect { |x| [ x.name, x.id ] }, include_blank: false
  = f.input :description
  = f.input :default
  = f.input :min
  = f.input :max
  = f.input :strategy, collection: [ 'match', 'optional', 'supplied' ], include_blank: false
  = f.button :submit, value: t('.save'), class: "btn btn-primary"
  = link_to t('.back'), @subject_attribute.persisted? ? policy_subject_attribute_path(@policy, @subject_attribute) : policy_subject_attributes_path(@policy), class: "btn btn-link"
